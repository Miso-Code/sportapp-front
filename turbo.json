{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": ["NODE_ENV", "VITE_SPORTAPP_API_URL"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"package": {
			"dependsOn": ["^package"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"dotEnv": [
				".env.development.local",
				".env.development",
				".env.local",
				".env"
			]
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"pre-commit": {
			"dependsOn": ["^pre-commit"]
		}
	}
}
