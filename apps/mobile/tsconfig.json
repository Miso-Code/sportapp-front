{
	"extends": "@react-native/typescript-config/tsconfig.json",
	"compilerOptions": {
		"jsx": "react-native",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@containers/*": ["./src/containers/*"],
			"@screens/*": ["./src/screens/*"]
		}
	},
	"allowJs": true,
	"include": ["src", "src/config/test/jest.setup.ts"]
}
