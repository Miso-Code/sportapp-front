{
	"name": "sportapp",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"nohoist": [
			"**/react-native",
			"**/react-native/**",
			"**/@react-native",
			"**/@react-native/**"
		]
	},
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"lint": "turbo lint",
		"pre-commit": "turbo pre-commit",
		"prepare": "husky install"
	},
	"dependencies": {
		"typescript": "5.3.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@sportapp/eslint-config": "*",
		"@sportapp/prettier-config": "*",
		"@sportapp/typescript-config": "*",
		"husky": "^8.0.0",
		"lint-staged": "^15.2.2",
		"turbo": "latest"
	},
	"packageManager": "yarn@1.22.22",
	"engines": {
		"node": ">=18"
	}
}
